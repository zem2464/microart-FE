{
  "name": "microart-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.8.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^5.8.6",
    "dayjs": "^1.11.18",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.14.2",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "moment": "^2.30.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^18.2.0",
    "react-mentions": "^4.4.10",
    "react-router-dom": "^6.15.0",
    "react-scripts": "5.0.1",
    "recharts": "^3.2.1",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "electron-build": "npm run build && electron-builder",
    "electron-build-win": "npm run build && electron-builder --win",
    "electron-build-mac": "npm run build && electron-builder --mac",
    "electron-build-linux": "npm run build && electron-builder --linux"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.imagecare.desktop",
    "productName": "Image Care",
    "icon": "public/assets/icon.png",
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/assets/**/*"
    ],
    "directories": {
      "buildResources": "public/assets"
    },
    "publish": [
      {
        "provider": "s3",
        "bucket": "microart-desktop-releases",
        "region": "us-east-1",
        "path": "/",
        "acl": null,
        "storageClass": "STANDARD"
      }
    ],
    "win": {
      "icon": "public/assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "microArt",
      "differentialPackage": true
    },
    "mac": {
      "icon": "public/assets/icon.png",
      "target": ["dmg", "zip"],
      "category": "public.app-category.business"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.1.0"
  }
}
